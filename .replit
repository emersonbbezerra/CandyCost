modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm install"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm install"]

[workflows]
runButton = "Start"

[[workflows.workflow]]
name = "Start"
